@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Autenticação de dois fatores (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>Você não tem códigos de recuperação restantes.</strong>
                    <p>Você deveria <a asp-page="./GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a> antes de fazer login com um código de recuperação.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>Você tem 1 código de recuperação.</strong>
                    <p>Você pode <a asp-page="./GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a>.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>Você tem @Model.RecoveryCodesLeft códigos de recuperação restantes.</strong>
                    <p>Você poderia <a asp-page="./GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a>.</p>
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post" style="display: inline-block">
                    <button type="submit" class="btn btn-primary">Esquecer esse navegador</button>
                </form>
            }
            <a asp-page="./Disable2fa" class="btn btn-primary">Desativar 2FA</a>
            <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary">Redefinir código de recuperação</a>
        }

        <h4>Aplicativo de autenticação</h4>
        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Adicionar um Aplicativo de autenticação</a>
        }
        else
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Configurar aplicativo autenticador</a>
            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-primary">Redefinir aplicativo autenticador</a>
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Política de privacidade e cookies não foram aceitas.</strong>
            <p>Você deve aceitar a política antes de habilitar a autenticação de dois fatores.</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
